doctype html
html
    head
        title Student Details
        style.
            body {
                font-family: Arial, sans-serif;
                background: linear-gradient(to right, #eceff1, #cfd8dc);
                margin: 0;
                padding: 0;
            }
            h1 {
                text-align: center;
                color: #37474f;
                font-size: 2.5rem;
                margin-top: 20px;
            }
            table {
                border-collapse: collapse;
                margin: 20px auto;
                background-color: #ffffff;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            }
            th, td {
                padding: 15px;
                text-align: center;
                border: 1px solid #b0bec5;
            }
            th {
                background-color: #546e7a;
                color: white;
                font-size: 1.2rem;
            }
            td {
                background-color: #eceff1;
                font-size: 1rem;
                color: #455a64;
                vertical-align: middle;
            }
            tr:nth-child(even) td {
                background-color: #e3f2fd;
            }
            tr:hover td {
                background-color: #f5f5f5;
            }
            .img { 
                width: 200px; 
                height: 200px; 
                border: 3px solid #546e7a;
                padding: 0;  
                margin: 0;  
                display: block; 
            }
            p {
                font-size: 18px;
                color: #607d8b;
                text-align: center;
                background-color: #eceff1;
                padding: 20px;
                border-radius: 8px;
                width: 60%;
                margin: 20px auto;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            }
    body
        h1 RESULT
        if data
            table(cellspacing="0" cellpadding="0")
                tr
                    th NAME
                    td=data.name
                    td(rowspan="6")
                        img(src=file, alt="Student Image", class="img")
                tr
                    th PYTHON
                    td=data.python
                tr
                    th ANDROID
                    td=data.andriod
                tr
                    th MST
                    td=data.mst
                tr
                    th DEVOPS
                    td=data.devops
                tr
                    th ML
                    td=data.ml
        else
            p No marks data available.
